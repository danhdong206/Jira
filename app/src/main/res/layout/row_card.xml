<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/xml_ic_circle"
                android:background="@drawable/xml_bg_defect"
                android:padding="@dimen/padding_tiny"
                android:tint="@color/white"/>

            <ImageView
                android:id="@+id/img_priority"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/xml_ic_arrow_up"
                android:tint="@color/red"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_toLeftOf="@+id/layout_right"
            android:layout_toRightOf="@+id/img_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_id"
                style="@style/TextStyle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="PIAS-16" />

            <TextView
                android:id="@+id/txt_summary"
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                tools:text="Operation review Screen Flows" />

            <TextView
                android:id="@+id/txt_link"
                style="@style/TextStyle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                tools:text="EP05_GENERAL"
                android:background="@drawable/bg_epic_link"
                android:padding="@dimen/padding_tiny"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>